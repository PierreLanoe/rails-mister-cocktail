<div id="banner-new" class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%=image_url("#{@cocktail.id}.jpeg")%>);">
  <div class="banner-content">

    <h1><%= @cocktail.name %></h1>
    <div class="card zoom" style="background: linear-gradient(-225deg, rgba(0,0, 0,0.2) 0%, rgba(0, 0, 0,0.2) 50%);">
      <div class="card-category">INGREDIENTS: </div>
      <div class="card-description">

        <ul><% @cocktail.doses.each do |dose| %>
          <li><%= "#{dose.description} de #{dose.ingredient.name}"%>   <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-times-circle" style="color: white;"></i>
            <% end %>
          </li>
          <% end  %>
        </ul>

      </div>
    </div>

    <div class="card zoom" style="background: linear-gradient(-225deg, rgba(0,0, 0,0.2) 0%, rgba(0, 0, 0,0.2) 50%);">
      <div class="card-category">ADD INGREDIENTS TO <%= @cocktail.name.upcase %> </div>
      <div class="card-description">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <div class="btn btn-info"><%= f.button :submit %></div>
    <% end %>
      </div>
    </div>

  </div>
</div>





