<h1>Cocktail name: <%= @cocktail.name %></h1>
<ul>Ingredients: <% @cocktail.doses.each do |dose| %>
    <li><%= "#{dose.description} de #{dose.ingredient.name}"%>   <%= link_to 'X', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %></li>
 <% end  %>
</ul>
<p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%></p>
<p><%= link_to "Go back to the list", cocktails_path, class: "btn btn-primary"%></p>
