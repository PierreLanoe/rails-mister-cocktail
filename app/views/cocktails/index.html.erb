
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://www.remymartin.com/wp-content/uploads/2016/07/15_Sidecar-1-1024x524.jpg');">
  <div class="banner-content">
    <h1>MISTER COCKTAIL</h1>
    <h3>Since 1994</h3>

  </div>
</div>

<div id="main-btn"><%= link_to "Add a new cocktail", new_cocktail_path, class: "btn-medium"%></div>

<div class="container">
 <div class="row">
   <% @cocktails.each do |cocktail| %>
     <div class="col-xs-12 col-sm-4">
       <%= link_to cocktail_path(cocktail) do%>
       <div class="card zoom" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%=image_url("#{cocktail.id}.jpeg")%>);">
          <div class="card-category">Popular</div>
           <div class="card-description">
             <h2><%= cocktail.name %></h2>
           </div>
         </div>
       <% end %>
     </div>
   <% end %>
 </div>
</div>


